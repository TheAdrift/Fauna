<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>movement engine</name>
    <events>
        <variable comment="For platform math. Initial upward speed when player presses jump." constant="0" name="jumpForce" static="0" type="number">400</variable>
        <variable comment="For platform math. Downward force on player character, in pixels per second per second." constant="0" name="gravity" static="0" type="number">1200</variable>
        <event-block>
            <conditions>
                <condition id="-1" name="Every tick" type="System" />
            </conditions>
            <actions>
                <action id="-1" name="Set X" type="playerCollider">
                    <param id="0" name="X">floorCollider.X</param>
                </action>
                <action id="-2" name="Set Y" type="playerCollider">
                    <param id="0" name="Y">floorCollider.Y-(playerCollider.Height/2)-playerCollider.jumpHeight</param>
                </action>
                <action id="-11" name="Add to" type="playerCollider">
                    <param id="0" name="Instance variable">jumpHeight</param>
                    <param id="1" name="Value">playerCollider.vertSpeed*dt</param>
                </action>
                <action id="-24" name="Move to top" type="playerCollider" />
            </actions>
            <sub-events>
                <event-block>
                    <conditions>
                        <condition id="-8" name="Compare two values" type="System">
                            <param id="0" name="First value">playerCollider.jumpHeight</param>
                            <param id="1" name="Comparison">3</param>
                            <param id="2" name="Second value">0</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-10" name="Set value" type="playerCollider">
                            <param id="0" name="Instance variable">vertSpeed</param>
                            <param id="1" name="Value">0</param>
                        </action>
                        <action id="-10" name="Set value" type="playerCollider">
                            <param id="0" name="Instance variable">jumpHeight</param>
                            <param id="1" name="Value">0</param>
                        </action>
                        <action id="-13" name="Set boolean" type="playerCollider">
                            <param id="0" name="Instance variable">isFalling</param>
                            <param id="1" name="Value">0</param>
                        </action>
                        <action id="-13" name="Set boolean" type="playerCollider">
                            <param id="0" name="Instance variable">inAir</param>
                            <param id="1" name="Value">0</param>
                        </action>
                    </actions>
                </event-block>
            </sub-events>
        </event-block>
        <event-block>
            <conditions>
                <condition id="2" name="Key is down" type="Keyboard">
                    <param id="0" name="Key">32 (Space)</param>
                </condition>
                <condition id="-8" inverted="1" name="Is boolean instance variable set" type="playerCollider">
                    <param id="0" name="Instance variable">inAir</param>
                </condition>
            </conditions>
            <actions>
                <action id="-10" name="Set value" type="playerCollider">
                    <param id="0" name="Instance variable">vertSpeed</param>
                    <param id="1" name="Value">jumpForce</param>
                </action>
                <action id="-13" name="Set boolean" type="playerCollider">
                    <param id="0" name="Instance variable">inAir</param>
                    <param id="1" name="Value">1</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="-8" name="Is boolean instance variable set" type="playerCollider">
                    <param id="0" name="Instance variable">inAir</param>
                </condition>
            </conditions>
            <actions>
                <action id="-12" name="Subtract from" type="playerCollider">
                    <param id="0" name="Instance variable">vertSpeed</param>
                    <param id="1" name="Value">gravity*dt</param>
                </action>
            </actions>
        </event-block>
    </events>
</c2eventsheet>
